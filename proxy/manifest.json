{
  "manifest_version": 2,
  "name": "ly-proxy",
  "version": "1.0",
  "description": "proxy",
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },

  "browser_action": {
    "default_title": "点击打开配置"
  },

  "background": {
    "scripts": ["base.js", "bg.js"]
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "proxy",
    "webRequest",
    "scripting",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "lyproxy.ffp@61linux.com",
      "strict_min_version": "60.0"
    }
  }
}