{
    "manifest_version": 3,
    "name": "hotkey",
    "version": "1.0",
    "description": "firefox增强插件",
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "js/api.js",
                "js/inject.js"
            ],
            "css": [
                "inject.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "img/http.png",
            "32": "img/http.png"
        }
    },
    "background": {
        "scripts": [
            "js/api.js",
            "js/bg.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "v3_hotkey.ffp@61linux.com",
            "strict_min_version": "91.1.0"
        }
    }
}